<?xml version="1.0"?>
<canvashack>
	<name>Dashboard Badge Color</name>
	<id>dashbpoard-badge-color</id>
	<abstract>Make the dashboard badges stand out more.</abstract>
	<authors>
		<author>
			<name>Seth Battis</name>
			<email>SethBattis@stmarksschool.org</email>
		</author>
	</authors>
	<components>
		<css>dashboard-badge-color.css</css>
		<canvas>
			<pages>
				<include>
					<page>
						<type>regex</type>
						<pattern>%^(https?://)?[^/]+/[^/]*$%</pattern>
					</page>
				</include>
			</pages>
		</canvas>
	</components>
</canvashack>
